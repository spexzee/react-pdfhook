{
    "compilerOptions": {
      "target": "es6",
      "module": "NodeNext",  // Changed from "ESNext" to match resolution
      "moduleResolution": "NodeNext",
      "jsx": "react-jsx",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "declaration": true,
      "outDir": "dist",
      "types": ["node"]       // Add node types for Node.js compatibility
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }